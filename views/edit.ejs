<% layout("layouts/boilerplate") %>
    <div class="row">
        <div>
            <h1 class="text-center">Update Campground</h1>
        </div>
        <div class="col-6 offset-3">
            <form action="/campground/<%= campground._id %>?_method=patch" method="post">
                <div class="mb-2">
                    <label class="form-label" for="title">Title: </label>
                    <input class="form-control" type="text" name="title" id="title"
                        placeholder="<%= campground.title %>">
                </div>
                <div class="mb-2">
                    <label class="form-label" for="price">Campground Price: </label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input id="price" name="price" type="number" class="form-control"
                            placeholder="<%= campground.price %>" aria-label="price" aria-describedby="price">
                    </div>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" name="description" id="description" cols="30" rows="10"
                        placeholder="<%= campground.description %>"></textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="image">Image URL: </label>
                    <input class="form-control" type="url" name="image" id="image"
                        placeholder="<%= campground.image %>">
                </div>
                <div class="mb-2">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="location" id="location"
                        placeholder="<%= campground.location %>">
                </div>
                <div class="mb-2 d-flex align-items-center">
                    <input class="btn btn-info mx-auto" type="submit" value="Update Campground!">
                </div>
            </form>
        </div>
    </div>
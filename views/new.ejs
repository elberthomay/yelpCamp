<% layout("layouts/boilerplate") %>
    <div class="row">
        <div>
            <h1 class="text-center">New Campground</h1>
        </div>
        <div class="col-6 offset-3">
            <form action="/campground" method="post">
                <div class="mb-2">
                    <label class="form-label" for="title">Title: </label>
                    <input class="form-control" type="text" name="title" id="title">
                </div>
                <div class="mb-2">
                    <label class="form-label" for="price">Campground Price: </label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input id="price" name="price" type="number" class="form-control" placeholder="0.00"
                            aria-label="price" aria-describedby="price">
                    </div>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" name="description" id="description" cols="30" rows="10"></textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="image">Image URL: </label>
                    <input class="form-control" type="url" name="image" id="image">
                </div>
                <div class="mb-2">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="location" id="location">
                </div>
                <div class="mb-2 d-flex align-items-center">
                    <input class="btn btn-success mx-auto" type="submit" value="Add Campground!">
                </div>
            </form>
        </div>
    </div>